{% extends 'base.html.twig' %}

{% block title %}Administration Cin√©phoria{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            {% for msg in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    {{ msg }}
                </div>
            {% endfor %}
                
            {% for msg in app.session.flashBag.get('error') %}
                <div class="alert alert-danger">
                    {{ msg }}
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h1 class="">Espace d'Administration</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {% include 'adminspace/navs.html.twig' %}
        </div>
    </div>
    {{ form_start(form, {action: path('app_movies_edit', { id:movie.id }) }) }}
    <div class="row">
        <div class="col-12">
            <h2 id="titleEquipes">Modification du film {{ movie.title|e }}</h2>

            {{ form_rest(form) }}
            <input type="hidden" id="csrf_token" value="{{ token }}" />
        </div>
    </div>

    <div class="row"><div class="col-12">&nbsp;</div></div>

    <div class="row">
        <div class="col-12">
            <input type="submit" class="btn btn-primary" value="Enregistrer" />
            <a class="btn btn-secondary" href="{{ path('app_adminspace_movies') }}">Annuler</a>
            <button class="btn btn-danger" data-controller="confirmation" data-action="click->confirmation#alert"
                     data-confirmation-url-param="{{ path('app_movies_delete', {id: movie.id}) }}" 
                     data-confirmation-redirect-param="{{ path('app_adminspace_movies') }}">Supprimer</button>
        </div>
    </div>
    {{ form_end(form) }}

</div>
{% endblock %}



